<div class="container">
    <div class="gap gap-small"></div>
  <div class="row">
      <div class="col-md-8">
<h1>New Booking</h1>
    <% unless current_user %>
      <span>You can add more points to your HighFlyer Account By logging in</span>
        <%= render 'users/login' %>
    <% end %>
    <div class="gap gap-small"></div>
    <%= render 'bookings/form' %>
    </div>
    <div class="col-md-4">
      <%= render 'flights/flight_details', flight: @flight %>
    </div>
  </div>
</div>
