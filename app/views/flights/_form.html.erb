<%= form_for(@flight) do |f| %>
  <% if @flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
      <% @flight.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 center col-md-offset-3">
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: 'Enter a flight name' %>
    </div>
    <div class="form-group">
      <%= f.collection_select(:destination_id, Airport.all, :id, :name, {include_blank: 'Select your Departure Point'} , class: 'form-control') %>
    </div>
    <div class="form-group">
      <%= f.collection_select(:origin_id, Airport.all, :id, :name, {include_blank: 'Select your Arrival Point'} , class: 'form-control') %>
    </div>
    <div class="form-group col-md-12">
      <div class="col-md-6">
        <%= f.text_field :departure_date, class: 'form-control datepicker' %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :arrival_date, class: 'form-control datepicker' %>
      </div>
    </div>
    <%#= console %>
    <div class="form-group">

    </div>
    <div class="actions">
      <%= f.submit(class: 'btn btn-default') %>
    </div>
  </div>

<% end %>
