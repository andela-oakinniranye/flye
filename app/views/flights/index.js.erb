<% unless @flights.blank? %>
  $(".search_flight_results").html("<%=j render 'flights/flight_list', flights: @flights, no_of_passengers: @required_passengers  %>");
  $('html,body').animate({
            scrollTop: $(".scroll_to_search_result").offset().top},
            'slow');
<% else %>
  toastr.warning("<%= flash[:danger] || flash[:message] %>") 
<% end %>
